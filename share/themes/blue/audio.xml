<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<theme geometry="800x600">

    <menu name="audio" style="default">
	<container x="10" y="100" width="270" height="490">
	    <rectangle color="0xcc000000" radius="30"/>
	    <thumbnail x="10" y="10" width="250" height="250"
		thumbnail="$item.thumbnail">
	    </thumbnail>
	    <label x="10" y="280" width="230" font="Vera:20" color="0xffffff">
		$item.name
	    </label>
	    <label x="10" y="320" width="230" font="Vera:18" color="0xffffff">
		$item.artist
	    </label>
	    <label x="10" y="340" width="230" font="Vera:18" color="0xffffff">
		$item.album
	    </label>
	</container>

        <listing style="fixed-selection" x="300" y="100" width="490"
	    height="490" spacing="6">
	    <label font="Vera" height="30" color="0xcccccc">
		<properties xpadding="10" ypadding="2"/>
		$item.name
	    </label>
            <selection>
		<properties color="0xffffff"/>
                <rectangle color="0xa0000000" radius="30"/>
            </selection>
        </listing>

	<image style="icon" x="500" y="350" width="290" height="240" name="audio">
	    <properties xalign="right" yalign="bottom" keep-aspect="true" opacity="50"/>
	</image>
    </menu>

    <application name="audioplayer" style="simple">
        <image filename="../../images/blurrback.jpg" ignore-overscan="true"/>
	<container x="40" y="100" width="720" height="270">
	    <rectangle color="0xcc000000" radius="30"/>
	    <thumbnail x="20" y="20" width="230" height="230"
		thumbnail="$item.thumbnail">
	    </thumbnail>
	    <container x="300"  y="20" width="420" height="230">
		<label font="Vera:24" color="0xffffff">$item.title</label>
		<label y="200" font="Vera:24" color="0xffffff">
		    $item.elapsed / $item.length
		</label>
	    </container>
	</container>

	<container x="490" y="450" width="270" height="120">
	    <rectangle color="0xcc000000" radius="30"/>
	    <listing style="fixed-selection">
		<properties xpadding="10"  ypadding="10" spacing="4"/>
		<label font="Vera" height="20" color="0x000000">
		    <properties xpadding="10"/>
		    $item.name
		</label>
		<selection>
		    <properties color="0xffffff"/>
		    <rectangle color="0xa0000000" radius="20"/>
		</selection>
	    </listing>
	</container>
    </application>

</theme>
