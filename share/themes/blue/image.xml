<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<theme>

    <script filename='scripts.py'/>

    <menu name="image">
        <listing style="grid" x="20" y="100" width="1240" height="480" xpadding="30" ypadding="30">
	    <properties xalign="center"/>
	    <group width="130" height="130">
		<properties anchor-point="65,65" opacity="150"/>
		<thumbnail style="mimetype" height="100" item="item">
		    <properties xalign="center" yalign="center"/>
		</thumbnail>
		<label font="Vera" y="110" height="20" color="0xffffff">
		    <properties xalign="center"/>
		    $item.name
		</label>
	    </group>
            <selection>
		<rectangle color="0xc0000000" radius="15" width="170" height="170"/>
            </selection>
	    <event name="select"><![CDATA[
	        if prev:
                    prev.animate('EASE_OUT_QUAD', secs, opacity=130, scale_x=1, scale_y=1)
                next.animate('EASE_OUT_QUAD', secs, opacity=255, scale_x=1.2, scale_y=1.2)
		]]>
	    </event>
        </listing>
	<group y="620" height="120">
	    <rectangle color="0x66000000"/>
	    <text font="Vera:20" color="0xffffff">
		$item.name with ${item.width}x${item.height}
	    </text>
	</group>
    </menu>

    <application name="imageviewer">
	<photo name="player"/>

        <osd>
            <properties screen-width="1280" screen-height="720"/>
            <widget use-as="browser">
		<rectangle y="470" color="0x00000000"/>
		<listing style="fixed-selection" x="-50" y="480" width="900" height="110"
			 selection="3" xpadding="15" ypadding="15">
		    <thumbnail style="mimetype" item="item" width="100" height="70">
			<properties xalign="center" yalign="center"/>
		    </thumbnail>
		    <selection xpadding="10" ypadding="10">
			<rectangle color="0x444444" width="120" height="90" radius="20"/>
		    </selection>
		</listing>
	    </widget>
	</osd>
    </application>

</theme>
