<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<theme geometry="800x600">

    <idlebar height="60">
        <properties depth="3"/>
        <image height="60" filename="../../images/idlebar.png" ignore-overscan="true"/>
	<container>
	    <properties xpadding="10" ypadding="10" name="content"/>
	    <image height="80" width="200" filename="../../images/gant/logo.png">
		<properties keep-aspect="true"/>
	    </image>
	    <container x="210">
		<properties name="plugins"/>
	    </container>
	</container>
    </idlebar>

    <application name="menu" style="simple">
        <properties depth="1"/>
        <image filename="../../images/blurrback.jpg" ignore-overscan="true"/>
    </application>

    <menu name="main" style="default">
        <listing x="200" y="200" width="400" height="200" spacing="10">
	    <label font="Vera" height="40" color="0xcccccc">
		<properties xalign="center" xpadding="10" ypadding="5"/>
		$item.name
	    </label>
            <selection>
		<properties color="0xffffff"/>
                <rectangle color="0xa0000000" radius="40"/>
            </selection>
        </listing>
    </menu>

    <menu name="default" style="default">
        <listing x="20" y="100" width="600" height="480" spacing="6">
	    <label font="Vera" height="35" color="0xcccccc">
		<properties xpadding="10" ypadding="2"/>
		$item.name
	    </label>
            <selection>
		<properties color="0xffffff"/>
                <rectangle color="0xa0000000" radius="20"/>
            </selection>
        </listing>
    </menu>

</theme>
