<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<theme geometry="800x600">

    <idlebar height="60">
        <properties depth="3"/>
        <image height="60" filename="../../images/idlebar.png" ignore-overscan="true"/>
	<container>
	    <properties xpadding="10" ypadding="10" name="content"/>
	    <image height="80" width="200" filename="../../images/gant/logo.png">
		<properties keep-aspect="true"/>
	    </image>
	    <container x="210">
		<properties name="plugins"/>
	    </container>
	</container>
    </idlebar>

    <osd y="70" height="50" font="Vera" color="0xffffff">
        <properties depth="3" xalign="right" xpadding="10" ypadding="10"/>
    </osd>

    <application name="menu" style="simple">
        <properties depth="1"/>
        <image filename="../../images/blurrback.jpg" ignore-overscan="true"/>
    </application>

    <menu name="main" style="default">
	<container y="60" width="290">
	    <properties xpadding="20" ypadding="20"/>
	    <rectangle color="0xcc000000">
		<properties xpadding="-20" ypadding="-20"/>
	    </rectangle>
	    <listing y="50" spacing="2">
		<label font="Vera" height="25" color="0x999999">
		    <properties xalign="right" yalign="center"/>
		    $item.name
		</label>
		<selection>
		    <properties scale="1.2" color="0xffffff"/>
		    <rectangle color="0xff000000"/>
		</selection>
	    </listing>
	    <eventhandler event="hide">
		<animate secs="0.2" behaviour="move" x2="-300"/>
	    </eventhandler>
	    <eventhandler event="show">
		<animate delay="0.2" secs="0.2" behaviour="move" x1="-300" x2="0"/>
	    </eventhandler>
	</container>
	<image style="icon" x="500" y="350" width="290" height="240" name="$item.media_type">
	    <properties xalign="right" yalign="bottom" keep-aspect="true"/>
	</image>
	<eventhandler event="show">
	    <process-children/>
	</eventhandler>
	<eventhandler event="hide">
	    <process-children/>
	</eventhandler>
    </menu>

    <menu name="default" style="default">
        <listing x="20" y="100" width="600" height="480" spacing="6">
	    <label font="Vera" height="30" color="0xcccccc">
		<properties xpadding="10" ypadding="2"/>
		$item.name
	    </label>
            <selection>
		<properties color="0xffffff"/>
                <rectangle color="0xa0000000" radius="20"/>
            </selection>
        </listing>
    </menu>

</theme>
