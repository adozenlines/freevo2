<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<theme geometry="800x600">

    <stage style="zoom"/>

    <application name="splash">
        <properties depth="1"/>
        <!-- background image -->
        <image filename="../../images/blurrsplash.jpg" ignore-overscan="true"/>
        <label x="100" y="380" width="600" font="Vera:24" color="0xff0000">
	    <properties xalign="center"/>
            Starting Freevo, please wait...
        </label>
        <!-- progressbar border and progressbar -->
        <rectangle x="100" y="400" width="600" height="16" color="0xffffff" radius="20"/>
        <rectangle x="105" y="402" width="590" height="12" color="0x000000"/>
        <progressbar x="105" y="402" width="590" height="12">
            <!-- set name to get the widget from ouside the gui code -->
            <properties name="plugins"/>
            <rectangle color="0xffffff"/>
        </progressbar>
    </application>
</theme>
